<?xml version="1.0" encoding="utf-8" ?>
<odoo>

	<record model="ir.ui.view" id="view_partner_form">
		<field name="name">res.partner.view.form.inherit.l10n.pe.vat</field>
		<field name="model">res.partner</field>
		<field name="inherit_id" ref="l10n_latam_base.view_partner_latam_form" />
		<field name="arch" type="xml">
			<sheet position="before">
				<header>
					<button string="Buscar por RUC/DNI" type="object" name="update_document" context="{'force_update':True}" />
				</header>
			</sheet>

			<xpath expr="//div[@name='button_box']" position="after">
				<widget name="web_ribbon" title="PrecauciÃ³n" bg_color="bg-danger" invisible="condition == 'HABIDO' and state_sunat =='ACTIVO'" />
			</xpath>
			
			<xpath expr="//field[@name='category_id']" position="after">
				<field name="state_sunat" invisible="is_company == False" />
				<field name="condition" invisible="is_company == False" />
				<field name="buen_contribuyente" invisible="is_company == False" />
				<field name="a_partir_del" invisible="is_company == False or buen_contribuyente == False" />
				<field name="resolucion" invisible="is_company == False or buen_contribuyente == False" />
				<field name="busqueda_automatica" />
				<field name="is_validate" invisible="True" />
			</xpath>

			<xpath expr="//page[@name='sales_purchases']" position="after">
				<page name="sunat_details" string="SUNAT" invisible="is_company == False">
					<group name="container_sunat_general" invisible="is_company == False">
						<group string="InformaciÃ³n general">
							<field name="legal_name" placeholder="Nombre Legal" invisible="is_company == False" required="is_company == True" readonly="is_validate == True" force_save="1"/>
							<field name="commercial_name" placeholder="Nombre comercial" invisible="is_company == False" required="is_company == True"  force_save="1"/>
							<field name="last_update" invisible="is_company == False" />
						</group>
						<!--separator string="Aconomic Pctivities" colspan="2" /-->
					</group>
				</page>
			</xpath>
		</field>
	</record>


</odoo>